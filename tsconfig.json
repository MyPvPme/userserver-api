{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@userserver-api/services": ["libs/services/src"],
      "@userserver-api/services/*": ["libs/services/src/*"],
      "@userserver-api/type-utils": ["libs/type-utils/src"],
      "@userserver-api/type-utils/*": ["libs/type-utils/src/*"]
    }
  }
}
